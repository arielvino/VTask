<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VTask"
        tools:targetApi="31">
        <activity
            android:name=".ui.CreateTaskActivity"
            android:exported="false"
            android:label="@string/title_activity_create_task"
            android:theme="@style/Theme.VTask" />
        <activity
            android:name=".ui.EditTaskActivity"
            android:exported="false"
            android:label="@string/title_activity_task_editor"
            android:theme="@style/Theme.VTask" />
        <activity
            android:name=".ui.AppBrowserActivity"
            android:exported="false"
            android:label="@string/title_activity_app_browser"
            android:theme="@style/Theme.VTask" />
        <activity
            android:name=".ui.TaskDisplayActivity"
            android:exported="false"
            android:label="@string/title_activity_task_display"
            android:theme="@style/Theme.VTask" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.VTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>